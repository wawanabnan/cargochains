{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{% block title %}CargoChains{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free/css/all.min.css">
  
  <link rel="stylesheet" href="{% static '/adminlte/css/adminlte.css' %}">
   <link rel="stylesheet" href="{% static 'adminlte/css/adminlte-fixes.css' %}">

  <link rel="stylesheet" href="{% static 'css/custom.css' %}">
  <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fontsource/source-sans-3@5.0.12/index.css"
      integrity="sha256-tXJfXfp6Ewt1ilPzLDtQnJV4hclT9XuaZUKyUvmyr+Q="
      crossorigin="anonymous"
      media="print"
      onload="this.media='all'"
    />
        <!--begin::Third Party Plugin(Bootstrap Icons)-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
      crossorigin="anonymous"
    />

  
  {% block extra_css %}{% endblock %}
</head>
<body class="layout-fixed sidebar-expand-lg sidebar-open bg-body-tertiary">

  <div class="app-wrapper">
    <nav class="app-header navbar navbar-expand bg-body">
       {% include 'partials/navbar.html' %}
    </nav>

    <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
        {% block sidebar %}
          {% include 'partials/sidebar.html' %}
        {% endblock %}
    </aside>

    <!-- Content -->
    <main class="app-main">
      <div class="app-content-header">
        <div class="container-fluid">
          <h1 class="m-0">{% block page_title %}Page Title{% endblock %}</h1>
        </div>
      </div>
      <div class="app-content">
        <div class="container-fluid">
          {% block content %}{% endblock %}
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="app-footer">
      <div class="float-end d-none d-sm-inline">CargoChains</div>
      <strong>&copy; 2025 <a href="#">CargoChains</a>.</strong> All rights reserved.
    </footer>
  </div>

  <!-- Scripts -->
  <script src="{% static 'vendor/adminlte/js/adminlte.js' %}"></script>
  {% block extra_js %}{% endblock %}
</body>
</html>
